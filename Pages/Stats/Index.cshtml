@page
@model BrodnikProject.Pages.Stats.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Stat[0].Hits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stat[0].Walks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stat[0].BA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stat[0].SO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stat[0].LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Stat) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Hits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Walks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
